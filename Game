        // Отрисовка заданий
        function renderTasks() {
            tasksContainer.innerHTML = '';
            
            tests.forEach(test => {
                const isCompleted = localStorage.getItem(`test_${test.id}_completed`) === 'true';
                const score = localStorage.getItem(`test_${test.id}_score`) || '0';
                const isFailed = localStorage.getItem(`test_${test.id}_failed`) === 'true';
                
                const taskElement = document.createElement('div');
                taskElement.className = `task-card ${isCompleted ? 'completed' : ''} ${isFailed ? 'failed' : ''}`;
                taskElement.dataset.testId = test.id;
                
                let statusText = 'Доступен';
                let statusClass = 'available';
                
                if (isCompleted) {
                    statusText = 'Выполнен';
                    statusClass = 'completed';
                } else if (isFailed) {
                    statusText = 'Не пройден';
                    statusClass = 'failed';
                }
                
                taskElement.innerHTML = `
                    <div class="task-header">
                        <div class="task-title">${test.title}</div>
                        <div class="task-status ${statusClass}">
                            ${statusText}
                        </div>
                    </div>
                    <div class="task-desc">${test.description}</div>
                    <div class="task-meta">
                        <div><i class="far fa-clock"></i> ${Math.floor(test.timeLimit / 60)} мин</div>
                        <div><i class="fas fa-tasks"></i> ${test.questions} заданий</div>
                        <div><i class="fas fa-star"></i> ${score}%</div>
                    </div>
                `;
                
                taskElement.addEventListener('click', () => startTest(test.id));
                tasksContainer.appendChild(taskElement);
            });
        }
        
        // Начать тест
        function startTest(testId) {
            if (gameState.testInProgress) {
                alert('Завершите текущую проверку перед началом новой.');
                return;
            }
            
            const test = tests.find(t => t.id === testId);
            if (!test) return;
            
            currentTestData = test;
            gameState.testInProgress = true;
            testFailed = false;
            showingExplanation = false;
            
            // Сброс переменных теста
            currentQuestionIndex = 0;
            score = 0;
            timeLeft = test.timeLimit;
            attemptsLeft = 3;
            selectedAnswer = null;
            
            // Получение вопросов для теста
            currentQuestions = questionsDatabase.filter(q => q.testId === testId);
            
            // Перемешиваем вопросы
            currentQuestions = [...currentQuestions].sort(() => Math.random() - 0.5);
            
            // Настройка диалога
            testTitle.textContent = `ТО: ${test.title}`;
            totalQuestionsDisplay.textContent = test.questions;
            testAttemptsDisplay.textContent = attemptsLeft;
            
            // Показываем тест, скрываем результаты
            testInProgress.style.display = 'block';
            testResults.style.display = 'none';
            explanationContainer.classList.remove('active');
            nextQuestionBtn.style.display = 'none';
            submitAnswerBtn.style.display = 'flex';
            
            // Запуск таймера
            startTimer();
            
            // Отображение первого вопроса
            displayQuestion();
            
            // Показ диалога
            testDialog.classList.add('active');
        }
        
        // Запуск таймера
        function startTimer() {
            if (timerInterval) clearInterval(timerInterval);
            
            updateTimerDisplay();
            
            timerInterval = setInterval(() => {
                timeLeft--;
                updateTimerDisplay();
                
                if (timeLeft <= 0) {
                    finishTest();
                }
            }, 1000);
        }
        
        // Обновление отображения таймера
        function updateTimerDisplay() {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            timerDisplay.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            
            // Изменение цвета при малом времени
            if (timeLeft < 60) {
                timerDisplay.style.color = '#f87171';
            } else if (timeLeft < 120) {
                timerDisplay.style.color = '#fbbf24';
            } else {
                timerDisplay.style.color = '#38bdf8';
            }
        }
        
        // Отображение вопроса
        function displayQuestion() {
            if (currentQuestionIndex >= currentQuestions.length) {
                finishTest();
                return;
            }
            
            const question = currentQuestions[currentQuestionIndex];
            
            // Обновление счетчиков
            currentQuestionDisplay.textContent = currentQuestionIndex + 1;
            questionCounter.textContent = `Задание ${currentQuestionIndex + 1} из ${currentQuestions.length}`;
            progressFill.style.width = `${((currentQuestionIndex + 1) / currentQuestions.length) * 100}%`;
            
            // Отображение вопроса
            questionText.textContent = question.question;
            
            // Очистка и создание вариантов ответов
            answerOptions.innerHTML = '';
            selectedAnswer = null;
            
            const letters = ['A', 'B', 'C', 'D'];
            
            // Перемешиваем ответы, но запоминаем правильный
            const shuffledAnswers = [...question.answers];
            const correctIndex = question.correct;
            const correctAnswer = shuffledAnswers[correctIndex];
            
            // Перемешиваем массив
            for (let i = shuffledAnswers.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [shuffledAnswers[i], shuffledAnswers[j]] = [shuffledAnswers[j], shuffledAnswers[i]];
            }
            
            // Находим новый индекс правильного ответа
            const newCorrectIndex = shuffledAnswers.indexOf(correctAnswer);
            
            // Сохраняем новый правильный индекс в объекте вопроса
            question.shuffledCorrect = newCorrectIndex;
            
            // Создаем варианты ответов
            shuffledAnswers.forEach((answer, index) => {
                const option = document.createElement('div');
                option.className = 'answer-option';
                option.dataset.index = index;
                
                option.innerHTML = `
                    <div class="answer-letter">${letters[index]}</div>
                    <div>${answer}</div>
                `;
                
                option.addEventListener('click', () => selectAnswer(index));
                answerOptions.appendChild(option);
            });
            
            // Сброс попыток для нового вопроса
            attemptsLeft = 3;
            attemptsLeftDisplay.textContent = attemptsLeft;
            attemptsCounter.style.display = 'block';
            
            // Сброс кнопок и пояснения
            explanationContainer.classList.remove('active');
            nextQuestionBtn.style.display = 'none';
            submitAnswerBtn.style.display = 'flex';
            submitAnswerBtn.disabled = true;
            submitAnswerBtn.innerHTML = '<i class="fas fa-check-circle"></i> Проверить';
            showingExplanation = false;
        }
        
        // Выбор ответа
        function selectAnswer(index) {
            if (showingExplanation) return;
            
            // Снимаем выделение со всех вариантов
            document.querySelectorAll('.answer-option').forEach(option => {
                option.classList.remove('selected');
            });
            
            // Выделяем выбранный вариант
            const selectedOption = document.querySelector(`.answer-option[data-index="${index}"]`);
            selectedOption.classList.add('selected');
            
            selectedAnswer = index;
            submitAnswerBtn.disabled = false;
        }
        
        // Проверка ответа
        function checkAnswer() {
            if (selectedAnswer === null) {
                alert('Выберите вариант ответа!');
                return;
            }
            
            const question = currentQuestions[currentQuestionIndex];
            const isCorrect = selectedAnswer === question.shuffledCorrect;
            
            if (isCorrect) {
                // Правильный ответ
                score += 20;
                
                // Подсветка правильного ответа
                document.querySelector(`.answer-option[data-index="${selectedAnswer}"]`).classList.add('correct');
                
                // Отключаем все варианты
                document.querySelectorAll('.answer-option').forEach(option => {
                    option.classList.add('disabled');
                    option.style.pointerEvents = 'none';
                });
                
                // Показываем пояснение
                explanationText.textContent = question.explanation;
                explanationContainer.classList.add('active');
                
                // Меняем кнопки
                submitAnswerBtn.style.display = 'none';
                nextQuestionBtn.style.display = 'flex';
                showingExplanation = true;
                
            } else {
                // Неправильный ответ
                attemptsLeft--;
                attemptsLeftDisplay.textContent = attemptsLeft;
                testAttemptsDisplay.textContent = attemptsLeft;
                
                // Подсветка неправильного ответа
                document.querySelector(`.answer-option[data-index="${selectedAnswer}"]`).classList.add('incorrect');
                
                // Отключаем только выбранный неправильный вариант
                document.querySelector(`.answer-option[data-index="${selectedAnswer}"]`).classList.add('disabled');
                document.querySelector(`.answer-option[data-index="${selectedAnswer}"]`).style.pointerEvents = 'none';
                
                // Сбрасываем выбор
                selectedAnswer = null;
                submitAnswerBtn.disabled = true;
                
                if (attemptsLeft <= 0) {
                    // Попытки закончились
                    testFailed = true;
                    
                    // Показываем правильный ответ
                    const correctOption = document.querySelector(`.answer-option[data-index="${question.shuffledCorrect}"]`);
                    if (correctOption) {
                        correctOption.classList.add('correct');
                    }
                    
                    // Показываем пояснение
                    explanationText.textContent = question.explanation;
                    explanationContainer.classList.add('active');
                    
                    setTimeout(() => finishTest(), 2000);
                }
            }
        }
        
        // Переход к следующему вопросу
        function goToNextQuestion() {
            currentQuestionIndex++;
            displayQuestion();
        }
        
        // Завершение теста
        function finishTest() {
            clearInterval(timerInterval);
            gameState.testInProgress = false;
            
            // Расчет результатов
            const totalPossibleScore = currentQuestions.length * 20;
            const percentage = Math.round((score / totalPossibleScore) * 100);
            
            // Показываем результаты
            showResults(percentage, score, totalPossibleScore);
            
            if (!testFailed && percentage >= 70) {
                // Сохранение результатов только если тест пройден
                localStorage.setItem(`test_${currentTestData.id}_completed`, 'true');
                localStorage.setItem(`test_${currentTestData.id}_score`, percentage.toString());
                localStorage.removeItem(`test_${currentTestData.id}_failed`);
                
                // Обновление статистики игры
                gameState.completedTests++;
                gameState.totalScore += percentage;
                gameState.averageScore = gameState.completedTests > 0 
                    ? Math.round(gameState.totalScore / gameState.completedTests) 
                    : 0;
                
                if (percentage >= 80 && gameState.skillLevel < 5) {
                    gameState.skillLevel++;
                }
                
                saveGameState();
            } else {
                // Тест не пройден
                localStorage.setItem(`test_${currentTestData.id}_failed`, 'true');
            }
            
            // Обновление интерфейса
            updateProgressDisplay();
            renderTasks();
        }
        
        // Показать результаты теста
        function showResults(percentage, score, totalPossibleScore) {
            testInProgress.style.display = 'none';
            testResults.style.display = 'block';
            
            const isSuccess = !testFailed && percentage >= 70;
            const timeUsed = currentTestData.timeLimit - timeLeft;
            const minutesUsed = Math.floor(timeUsed / 60);
            const secondsUsed = timeUsed % 60;
            
            resultsContainer.className = `results-container ${isSuccess ? 'result-success' : 'result-failure'}`;
            
            if (testFailed) {
                resultsContainer.innerHTML = `
                    <div class="result-icon">
                        <i class="fas fa-times-circle"></i>
                    </div>
                    <h2 class="result-title">Техосмотр не пройден</h2>
                    <p>Вы исчерпали все попытки на одном из заданий.</p>
                    <p style="margin: 15px 0; color: #fca5a5; font-size: 1.1rem;">
                        Технический осмотр требует более внимательного подхода.<br>
                        Повторите процедуры и попробуйте снова.
                    </p>
                    
                    <div class="result-stats">
                        <div class="stat-card">
                            <div class="stat-value">${percentage}%</div>
                            <div class="stat-label">Результат</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value">${score}/${totalPossibleScore}</div>
                            <div class="stat-label">Баллы</div>
                        </div>
                    </div>
                    
                    <div class="test-actions" style="margin-top: 30px;">
                        <button class="action-btn primary-btn" id="restart-test">
                            <i class="fas fa-redo"></i> Попробовать снова
                        </button>
                        <button class="action-btn secondary-btn" id="close-test">
                            <i class="fas fa-list"></i> Другие проверки
                        </button>
                    </div>
                `;
            } else {
                resultsContainer.innerHTML = `
                    <div class="result-icon">
                        <i class="fas ${isSuccess ? 'fa-check-circle' : 'fa-exclamation-circle'}"></i>
                    </div>
                    <h2 class="result-title">${isSuccess ? 'Техосмотр пройден!' : 'Проверка завершена'}</h2>
                    <p>${isSuccess ? 
                        'Оборудование соответствует требованиям. Допущено к эксплуатации.' : 
                        'Требуется дополнительная проверка. Результат ниже нормы.'}</p>
                    
                    <div class="result-stats">
                        <div class="stat-card">
                            <div class="stat-value">${percentage}%</div>
                            <div class="stat-label">Успешность</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value">${score}/${totalPossibleScore}</div>
                            <div class="stat-label">Баллы</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value">${minutesUsed}:${secondsUsed.toString().padStart(2, '0')}</div>
                            <div class="stat-label">Время</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value">${isSuccess ? '✓' : '✗'}</div>
                            <div class="stat-label">Статус</div>
                        </div>
                    </div>
                    
                    <div class="test-actions" style="margin-top: 30px;">
                        <button class="action-btn primary-btn" id="close-test">
                            <i class="fas fa-check"></i> ${isSuccess ? 'Завершить' : 'Понятно'}
                        </button>
                    </div>
                `;
            }
            
            // Настройка кнопок результатов
            if (document.getElementById('restart-test')) {
                document.getElementById('restart-test').addEventListener('click', () => {
                    testDialog.classList.remove('active');
                    setTimeout(() => startTest(currentTestData.id), 300);
                });
            }
            
            document.getElementById('close-test').addEventListener('click', () => {
                testDialog.classList.remove('active');
            });
        }
        
        // Настройка обработчиков событий
        function setupEventListeners() {
            closeDialogBtn.addEventListener('click', () => {
                if (gameState.testInProgress) {
                    if (confirm('Проверка еще не завершена. Вы уверены, что хотите закрыть? Весь прогресс будет потерян.')) {
                        clearInterval(timerInterval);
                        gameState.testInProgress = false;
                        testDialog.classList.remove('active');
                    }
                } else {
                    testDialog.classList.remove('active');
                }
            });
            
            submitAnswerBtn.addEventListener('click', checkAnswer);
            nextQuestionBtn.addEventListener('click', goToNextQuestion);
            
            infoClose.addEventListener('click', () => {
                componentInfo.classList.remove('active');
            });
            
            resetStatsBtn.addEventListener('click', resetStatistics);
            
            // Закрытие диалога при клике вне его
            testDialog.addEventListener('click', (e) => {
                if (e.target === testDialog) {
                    closeDialogBtn.click();
                }
            });
        }
        
        // Обновление отображения прогресса
        function updateProgressDisplay() {
            document.getElementById('completed-tests').textContent = `${gameState.completedTests}/${gameState.totalTests}`;
            document.getElementById('skill-level').textContent = gameState.skillLevel;
            document.getElementById('average-score').textContent = `${gameState.averageScore}%`;
        }
        
        // Инициализация игры при загрузке страницы
        document.addEventListener('DOMContentLoaded', initGame);
    </script>
</body>
</html>
