        // Инициализация игры
        function initGame() {
            init3DModel();
            renderTasks();
            setupEventListeners();
            updateProgressDisplay();
            loadGameState();
        }
        
        // Загрузка состояния игры
        function loadGameState() {
            const savedState = localStorage.getItem('aes_game_state');
            if (savedState) {
                const state = JSON.parse(savedState);
                gameState.completedTests = state.completedTests || 0;
                gameState.skillLevel = state.skillLevel || 1;
                gameState.totalScore = state.totalScore || 0;
                gameState.averageScore = state.averageScore || 0;
                updateProgressDisplay();
            }
        }
        
        // Сохранение состояния игры
        function saveGameState() {
            localStorage.setItem('aes_game_state', JSON.stringify({
                completedTests: gameState.completedTests,
                skillLevel: gameState.skillLevel,
                totalScore: gameState.totalScore,
                averageScore: gameState.averageScore
            }));
        }
        
        // Сброс статистики
        function resetStatistics() {
            if (confirm('Вы уверены, что хотите сбросить всю статистику? Весь прогресс будет потерян.')) {
                gameState.completedTests = 0;
                gameState.skillLevel = 1;
                gameState.totalScore = 0;
                gameState.averageScore = 0;
                
                // Очистка localStorage
                localStorage.removeItem('aes_game_state');
                for (let i = 1; i <= 8; i++) {
                    localStorage.removeItem(`test_${i}_completed`);
                    localStorage.removeItem(`test_${i}_score`);
                    localStorage.removeItem(`test_${i}_failed`);
                }
                
                updateProgressDisplay();
                renderTasks();
                alert('Статистика сброшена! Все данные удалены.');
            }
        }
        
        // Инициализация 3D модели с улучшенными компонентами
        function init3DModel() {
            // Создание сцены
            scene = new THREE.Scene();
            scene.background = new THREE.Color(0x0f172a);
            
            // Создание камеры
            camera = new THREE.PerspectiveCamera(60, 800 / 500, 0.1, 1000);
            camera.position.set(25, 15, 25);
            
            // Создание рендерера
            renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
            renderer.setSize(800, 500);
            renderer.shadowMap.enabled = true;
            renderer.shadowMap.type = THREE.PCFSoftShadowMap;
            document.getElementById('model-container-3d').appendChild(renderer.domElement);
            
            // Освещение
            const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
            scene.add(ambientLight);
            
            const directionalLight = new THREE.DirectionalLight(0xffffff, 0.8);
            directionalLight.position.set(30, 40, 20);
            directionalLight.castShadow = true;
            directionalLight.shadow.mapSize.width = 2048;
            directionalLight.shadow.mapSize.height = 2048;
            scene.add(directionalLight);
            
            // Создание сложных моделей компонентов
            
            // 1. Корпус реактора с закругленными формами
            const reactorGroup = new THREE.Group();
            
            // Основной корпус (цилиндр с закругленными краями)
            const reactorGeometry = new THREE.CylinderGeometry(3, 3, 10, 32);
            const reactorMaterial = new THREE.MeshPhongMaterial({ 
                color: 0x4a5568,
                metalness: 0.8,
                roughness: 0.2,
                flatShading: false
            });
            const reactor = new THREE.Mesh(reactorGeometry, reactorMaterial);
            reactor.castShadow = true;
            reactor.receiveShadow = true;
            
            // Верхняя часть реактора (полусфера)
            const reactorTopGeometry = new THREE.SphereGeometry(3, 32, 16, 0, Math.PI * 2, 0, Math.PI / 2);
            const reactorTop = new THREE.Mesh(reactorTopGeometry, reactorMaterial);
            reactorTop.position.y = 5;
            reactorTop.rotation.x = Math.PI;
            reactorTop.castShadow = true;
            
            // Патрубки
            const pipeGeometry = new THREE.CylinderGeometry(0.4, 0.4, 3, 16);
            const pipeMaterial = new THREE.MeshPhongMaterial({ 
                color: 0x2d3748,
                metalness: 0.7,
                roughness: 0.3
            });
            
            // Входной и выходной патрубки
            const inletPipe = new THREE.Mesh(pipeGeometry, pipeMaterial);
            inletPipe.position.set(-2.5, 2, 0);
            inletPipe.rotation.z = Math.PI / 2;
            
            const outletPipe = new THREE.Mesh(pipeGeometry, pipeMaterial);
            outletPipe.position.set(2.5, 2, 0);
            outletPipe.rotation.z = Math.PI / 2;
            
            reactorGroup.add(reactor, reactorTop, inletPipe, outletPipe);
            reactorGroup.position.set(-15, 5, 0);
            scene.add(reactorGroup);
            
            // Добавляем маркер для клика
            reactorGroup.userData = { component: 'reactor' };
            
            // 2. Главный циркуляционный насос с детализацией
            const pumpGroup = new THREE.Group();
            
            // Корпус насоса
            const pumpBaseGeometry = new THREE.CylinderGeometry(1.5, 1.8, 2.5, 32);
            const pumpMaterial = new THREE.MeshPhongMaterial({ 
                color: 0x2d3748,
                metalness: 0.9,
                roughness: 0.1
            });
            const pumpBase = new THREE.Mesh(pumpBaseGeometry, pumpMaterial);
            pumpBase.castShadow = true;
            
            // Электродвигатель
            const motorGeometry = new THREE.CylinderGeometry(1.2, 1.2, 3, 32);
            const motorMaterial = new THREE.MeshPhongMaterial({ 
                color: 0x4c51bf,
                metalness: 0.7,
                roughness: 0.3
            });
            const motor = new THREE.Mesh(motorGeometry, motorMaterial);
            motor.position.y = 2.75;
            motor.castShadow = true;
            
            // Фланцы соединения
            const flangeGeometry = new THREE.TorusGeometry(0.8, 0.1, 16, 32);
            const flangeMaterial = new THREE.MeshPhongMaterial({ 
                color: 0x718096,
                metalness: 0.6,
                roughness: 0.4
            });
            
            const inletFlange = new THREE.Mesh(flangeGeometry, flangeMaterial);
            inletFlange.position.set(-2.5, 0.5, 0);
            inletFlange.rotation.x = Math.PI / 2;
            
            const outletFlange = new THREE.Mesh(flangeGeometry, flangeMaterial);
            outletFlange.position.set(2.5, 0.5, 0);
            outletFlange.rotation.x = Math.PI / 2;
            
            pumpGroup.add(pumpBase, motor, inletFlange, outletFlange);
            pumpGroup.position.set(-5, 1.25, 5);
            pumpGroup.userData = { component: 'main-pump' };
            scene.add(pumpGroup);
            
            // 3. Парогенератор с трубной системой
            const steamGenGroup = new THREE.Group();
            
            // Корпус
            const steamGenBodyGeometry = new THREE.CylinderGeometry(2.5, 2.5, 12, 32);
            const steamGenMaterial = new THREE.MeshPhongMaterial({ 
                color: 0x718096,
                metalness: 0.6,
                roughness: 0.4
            });
            const steamGenBody = new THREE.Mesh(steamGenBodyGeometry, steamGenMaterial);
            steamGenBody.castShadow = true;
            steamGenBody.receiveShadow = true;
            
            // Теплообменная система (упрощенная)
            const heatExchangerGeometry = new THREE.BoxGeometry(5, 8, 3);
            const heatExchangerMaterial = new THREE.MeshPhongMaterial({ 
                color: 0x4a5568,
                wireframe: false,
                transparent: true,
                opacity: 0.7
            });
            const heatExchanger = new THREE.Mesh(heatExchangerGeometry, heatExchangerMaterial);
            heatExchanger.position.y = 0;
            
            steamGenGroup.add(steamGenBody, heatExchanger);
            steamGenGroup.position.set(0, 6, 0);
            steamGenGroup.userData = { component: 'steam-generator' };
            scene.add(steamGenGroup);
            
            // 4. Турбина с лопатками
            const turbineGroup = new THREE.Group();
            
            // Корпус турбины
            const turbineHousingGeometry = new THREE.CylinderGeometry(2, 2, 8, 32);
            const turbineHousingMaterial = new THREE.MeshPhongMaterial({ 
                color: 0x4c51bf,
                metalness: 0.9,
                roughness: 0.1
            });
            const turbineHousing = new THREE.Mesh(turbineHousingGeometry, turbineHousingMaterial);
            turbineHousing.rotation.z = Math.PI / 2;
            turbineHousing.castShadow = true;
            
            // Ротор турбины (визуализация)
            const rotorGeometry = new THREE.CylinderGeometry(1.5, 1.5, 7, 32);
            const rotorMaterial = new THREE.MeshPhongMaterial({ 
                color: 0xe53e3e,
                metalness: 0.8,
                roughness: 0.2
            });
            const rotor = new THREE.Mesh(rotorGeometry, rotorMaterial);
            rotor.rotation.z = Math.PI / 2;
            
            turbineGroup.add(turbineHousing, rotor);
            turbineGroup.position.set(10, 1, 0);
            turbineGroup.userData = { component: 'turbine' };
            scene.add(turbineGroup);
            
            // 5. Конденсатор с трубками
            const condenserGroup = new THREE.Group();
            
            const condenserGeometry = new THREE.BoxGeometry(6, 5, 4);
            const condenserMaterial = new THREE.MeshPhongMaterial({ 
                color: 0x2d3748,
                metalness: 0.5,
                roughness: 0.5
            });
            const condenser = new THREE.Mesh(condenserGeometry, condenserMaterial);
            condenser.castShadow = true;
            condenser.receiveShadow = true;
            
            // Трубки охлаждения (упрощенно)
            for (let i = 0; i < 10; i++) {
                const tubeGeometry = new THREE.CylinderGeometry(0.05, 0.05, 5, 8);
                const tube = new THREE.Mesh(tubeGeometry, pipeMaterial);
                tube.position.set(-2 + i * 0.4, 0, 0);
                tube.rotation.z = Math.PI / 2;
                condenserGroup.add(tube);
            }
            
            condenserGroup.add(condenser);
            condenserGroup.position.set(20, 2.5, 0);
            condenserGroup.userData = { component: 'condenser' };
            scene.add(condenserGroup);
            
            // 6. Генератор
            const generatorGroup = new THREE.Group();
            
            const generatorBodyGeometry = new THREE.CylinderGeometry(2, 2, 5, 32);
            const generatorBodyMaterial = new THREE.MeshPhongMaterial({ 
                color: 0xe53e3e,
                metalness: 0.7,
                roughness: 0.3
            });
            const generatorBody = new THREE.Mesh(generatorBodyGeometry, generatorBodyMaterial);
            generatorBody.castShadow = true;
            
            // Система охлаждения
            const coolingGeometry = new THREE.TorusGeometry(2.2, 0.3, 16, 32);
            const coolingMaterial = new THREE.MeshPhongMaterial({ 
                color: 0x38bdf8,
                metalness: 0.6,
                roughness: 0.4
            });
            const coolingRing = new THREE.Mesh(coolingGeometry, coolingMaterial);
            coolingRing.position.y = 1;
            
            generatorGroup.add(generatorBody, coolingRing);
            generatorGroup.position.set(10, 2.5, -5);
            generatorGroup.userData = { component: 'generator' };
            scene.add(generatorGroup);
            
            // 7. Трансформатор с радиаторами
            const transformerGroup = new THREE.Group();
            
            const transformerCoreGeometry = new THREE.BoxGeometry(3, 5, 2);
            const transformerCoreMaterial = new THREE.MeshPhongMaterial({ 
                color: 0xdd6b20,
                metalness: 0.6,
                roughness: 0.4
            });
            const transformerCore = new THREE.Mesh(transformerCoreGeometry, transformerCoreMaterial);
            transformerCore.castShadow = true;
            transformerCore.receiveShadow = true;
            
            // Радиаторы охлаждения
            for (let i = 0; i < 3; i++) {
                const radiatorGeometry = new THREE.BoxGeometry(0.3, 4, 1.5);
                const radiator = new THREE.Mesh(radiatorGeometry, pipeMaterial);
                radiator.position.set(-1 + i, -0.5, 1.5);
                transformerGroup.add(radiator);
            }
            
            transformerGroup.add(transformerCore);
            transformerGroup.position.set(20, 2.5, -6);
            transformerGroup.userData = { component: 'transformer' };
            scene.add(transformerGroup);
            
            // 8. Градирня (гиперболоидная форма)
            const coolingTowerGroup = new THREE.Group();
            
            // Гиперболоид
            const points = [];
            const detail = 32;
            for (let i = 0; i <= detail; i++) {
                const angle = (i / detail) * Math.PI * 2;
                const radius = 4 - Math.sin(angle * 2) * 0.5;
                points.push(new THREE.Vector2(radius, i * 0.5));
            }
            
            const towerGeometry = new THREE.LatheGeometry(points, 32);
            const towerMaterial = new THREE.MeshPhongMaterial({ 
                color: 0xa0aec0,
                metalness: 0.3,
                roughness: 0.7
            });
            const tower = new THREE.Mesh(towerGeometry, towerMaterial);
            tower.scale.set(1, 3, 1);
            tower.castShadow = true;
            tower.receiveShadow = true;
            
            coolingTowerGroup.add(tower);
            coolingTowerGroup.position.set(5, 7.5, 10);
            coolingTowerGroup.userData = { component: 'cooling-tower' };
            scene.add(coolingTowerGroup);
            
            // Создание трубопроводов между компонентами
            createSmoothPipes();
            
            // Создание пола
            const floorGeometry = new THREE.PlaneGeometry(50, 40);
            const floorMaterial = new THREE.MeshPhongMaterial({ 
                color: 0x1e293b,
                side: THREE.DoubleSide
            });
            const floor = new THREE.Mesh(floorGeometry, floorMaterial);
            floor.rotation.x = Math.PI / 2;
            floor.position.y = -0.5;
            floor.receiveShadow = true;
            scene.add(floor);
            
            // Сетка для масштаба
            const gridHelper = new THREE.GridHelper(50, 50, 0x334155, 0x475569);
            gridHelper.position.y = -0.49;
            scene.add(gridHelper);
            
            // Настройка OrbitControls
            controls = new THREE.OrbitControls(camera, renderer.domElement);
            controls.enableDamping = true;
            controls.dampingFactor = 0.05;
            controls.minDistance = 10;
            controls.maxDistance = 50;
            controls.maxPolarAngle = Math.PI / 2;
            controls.target.set(0, 5, 0);
            
            // Анимация
            function animate() {
                requestAnimationFrame(animate);
                
                // Вращение компонентов
                rotor.rotation.y += 0.02;
                generatorBody.rotation.y += 0.01;
                
                controls.update();
                renderer.render(scene, camera);
            }
            animate();
            
            // Обработка кликов на компоненты
            renderer.domElement.addEventListener('click', onModelClick);
            
            // Обработка изменения размера окна
            window.addEventListener('resize', () => {
                camera.aspect = 800 / 500;
                camera.updateProjectionMatrix();
                renderer.setSize(800, 500);
            });
        }
        
        // Создание плавных трубопроводов
        function createSmoothPipes() {
            const pipeMaterial = new THREE.MeshPhongMaterial({ 
                color: 0x4a5568,
                metalness: 0.8,
                roughness: 0.2
            });
            
            // От реактора к парогенератору
            createCurvedPipe(-12, 5, 0, -2.5, 6, 0, 0.6);
            
            // От парогенератора к турбине
            createCurvedPipe(2.5, 6, 0, 6, 1, 0, 0.5);
            
            // От турбины к конденсатору
            createCurvedPipe(14, 1, 0, 17, 2.5, 0, 0.5);
            
            // От конденсатора к градирне
            createCurvedPipe(23, 2.5, 0, 5, 2.5, 10, 0.5);
            
            // От градирни к насосу
            createCurvedPipe(5, 2.5, 7, -5, 1.25, 5, 0.5);
            
            // От насоса к реактору
            createCurvedPipe(-5, 1.25, 2, -12, 5, 0, 0.6);
        }
        
        // Создание изогнутой трубы
        function createCurvedPipe(x1, y1, z1, x2, y2, z2, radius) {
            const curve = new THREE.CatmullRomCurve3([
                new THREE.Vector3(x1, y1, z1),
                new THREE.Vector3((x1+x2)/2, (y1+y2)/2 + 2, (z1+z2)/2),
                new THREE.Vector3(x2, y2, z2)
            ]);
            
            const tubeGeometry = new THREE.TubeGeometry(curve, 20, radius, 8, false);
            const tubeMaterial = new THREE.MeshPhongMaterial({ 
                color: 0x4a5568,
                metalness: 0.8,
                roughness: 0.2
            });
            const tube = new THREE.Mesh(tubeGeometry, tubeMaterial);
            tube.castShadow = true;
            scene.add(tube);
        }
        
        // Обработка клика на модель
        function onModelClick(event) {
            const mouse = new THREE.Vector2();
            const rect = renderer.domElement.getBoundingClientRect();
            
            mouse.x = ((event.clientX - rect.left) / rect.width) * 2 - 1;
            mouse.y = -((event.clientY - rect.top) / rect.height) * 2 + 1;
            
            const raycaster = new THREE.Raycaster();
            raycaster.setFromCamera(mouse, camera);
            
            // Проверяем все объекты в сцене
            const intersects = raycaster.intersectObjects(scene.children, true);
            
            if (intersects.length > 0) {
                let clickedObject = intersects[0].object;
                
                // Поднимаемся по иерархии родителей, чтобы найти группу с userData
                while (clickedObject && !clickedObject.userData.component) {
                    clickedObject = clickedObject.parent;
                }
                
                if (clickedObject && clickedObject.userData.component) {
                    showComponentInfo(clickedObject.userData.component);
                }
            }
        }
        
        // Показать информацию о компоненте
        function showComponentInfo(componentId) {
            const components = {
                'reactor': {
                    title: 'Корпус реактора',
